<% layout('layouts/boilerplate') %>
    <h1>All Restaurants</h1>


    <% for (let item of items) {%>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Zm9vZHxlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= item.resto_name %>
                        </h5>
                        <p>
                            <small class="card-text text-muted">
                                <%= item.resto_city %>
                            </small>
                        </p>

                        <a class="btn btn-primary" href="restaurants/<%= item.resto_id %>">View</a>
                    </div>
                </div>
            </div>

        </div>

        <% } %>